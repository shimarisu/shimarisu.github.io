#VRML V2.0 utf8


Background {
	skyColor 0.8 0.8 1
}



#目
DEF Eye1 Transform {
	translation -1 0.4 2.5
	children [
		Shape {
		  geometry Sphere {
		    radius 0.5
		  }
		  appearance Appearance {
			material Material {
				diffuseColor 1 0.6 0.6
				emissiveColor 0.5 0 0
			}
		  }
		}
	]
}


DEF Eye2 Transform {
	translation 0.9 0.4 2.5
	children [
		Shape {
		  geometry Sphere {
		    radius 0.5
		  }
		  appearance Appearance {
			material Material {
				diffuseColor 0 1 0
				emissiveColor 0 0.5 0
			}
		  }
		}
	]
}


#口
DEF mouse Transform {
	translation 0 -1 2.5
	children [
		Shape {
		  geometry Sphere {
		    radius 0.5
		  }
		  appearance Appearance {
			material Material {
